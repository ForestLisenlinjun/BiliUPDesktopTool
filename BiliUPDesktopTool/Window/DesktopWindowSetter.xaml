            </Label>
            <Button x:Name="btn_comfirm" Content="确定" HorizontalAlignment="Left" Margin="97,523,0,0" VerticalAlignment="Top" Width="75" Background="#FFDDDDDD" Cursor="Hand" Click="Btn_comfirm_Click" />
            <Button x:Name="btn_cancel" Content="取消" HorizontalAlignment="Left" Margin="177,523,0,0" VerticalAlignment="Top" Width="75" Background="#FFDDDDDD" Cursor="Hand" Click="Btn_cancel_Click" />
        </Grid>
    </Border>
